{
    "name": "afc-stack",
    "version": "0.1.0",
    "private": true,
    "workspaces": ["apps/*", "packages/*"],
    "scripts": {
        "dev": "turbo run dev --parallel",
        "build": "turbo run build",
        "lint": "turbo run lint",
        "lint:fix": "turbo run lint:fix",
        "typecheck": "npx tsc -b",
        "test": "turbo run test",
        "test:watch": "turbo run test:watch",
        "create": "bun run create-repo.ts",
        "build:cli": "tsup",
        "changeset": "changeset",
        "version": "changeset version",
        "release": "changeset publish",
        "clean": "turbo clean && rm -rf node_modules .turbo dist",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
        "prepare": "husky",
        "db:generate": "bunx drizzle-kit generate",
        "db:migrate": "bunx drizzle-kit migrate",
        "db:studio": "bunx drizzle-kit studio",
        "docker:up": "docker compose -f compose.dev.yml up -d",
        "docker:down": "docker compose -f compose.dev.yml down",
        "docker:logs": "docker compose -f compose.dev.yml logs -f"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.1",
        "@changesets/cli": "^2.29.7",
        "@clack/prompts": "^0.11.0",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@types/fs-extra": "^11.0.4",
        "@types/pg": "^8.15.5",
        "chalk": "^5.6.2",
        "eslint": "^9.38.0",
        "eslint-config-next": "^15.5.6",
        "execa": "^9.6.0",
        "fs-extra": "^11.3.2",
        "gradient-string": "^3.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.5",
        "ora": "^9.0.0",
        "picocolors": "^1.1.1",
        "prettier": "^3.6.2",
        "tsup": "^8.5.0",
        "turbo": "latest",
        "typescript": "^5.6.3"
    },
    "packageManager": "bun@1.1.31",
    "engines": {
        "node": ">=20.0.0",
        "bun": ">=1.1.0"
    }
}
